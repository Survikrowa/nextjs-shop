{
  "name": "nextjsshop",
  "private": true,
  "author": "Szymon Hrabia",
  "license": " AGPL-3.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "lerna bootstrap && lerna run dev --parallel",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "lerna run lint --stream",
    "type-check": "lerna run tsc --stream",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.1",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint --parallel && npm run format",
      "postinstall": "npm run postinstall"
    }
  }
}
